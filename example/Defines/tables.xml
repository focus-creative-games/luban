<?xml version="1.0" encoding="UTF-8"?>
<module name="cfg">
  <!-- Map table keyed by id, read JSON root array: use '*@item.json' so sheet='*' (multi) and file='item.json' -->
  <table
    name="TbItem"
    value="cfg.Item"
    index="id"
    mode="map"
    group="client,server"
    input="*@item.json"
    comment="Item table"/>
</module>